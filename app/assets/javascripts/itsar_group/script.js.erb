$(document).ready(function(){
	urlnya = $(location).attr('href').split('?');
	atr_isian = $('#form_isian').attr('action');
	ini_url = (atr_isian + "?" + urlnya[1]);

	$('#form_isian').attr('action', ini_url);
	$('#submit_btn').attr('disabled','disabled');
	val_submit = $('#submit_btn').val();
    if(val_submit == "Perbaharui")
    {
        nmsf = 1;
        nmsa = 1;
    }
    else if(val_submit == "Simpan")
    {
        nmsf = 0;
        nmsa = 0;
    }

    //Validasi nama grup
	$('#name_group').bind("keyup keypress change",function(){
      nms = /^([a-z 0-9])+$/i.test($('#name_group').val());
         if(!nms)
        {
            nmsf = 0;
            $("#v_name_group").html('<div class="alert alert-danger">Tidak boleh diisi dengan selain a-z dan 0-9.</div>').hide().fadeIn(300);
        }
        else if($('#name_group').val().length < 3 || $('#name_group').val().length > 25)
        {
            nmsf = 0;
            $("#v_name_group").html('<div class="alert alert-danger">Isian harus terdiri dari 3 sampai 25 karakter.</div> ');
        }
        else if(nms)
        {
            nmsf = 1;
            $("#v_name_group").html('');
        }
    });

    //Validasi nama sekolah
    $('#name_school').bind("keyup keypress change",function(){
      nms = /^([a-z 0-9])+$/i.test($('#name_school').val());
         if(!nms)
        {
            nmsa = 0;
            $("#v_name_school").html('<div class="alert alert-danger">Tidak boleh diisi dengan selain a-z dan 0-9.</div>').hide().fadeIn(300);
        }
        else if($('#name_school').val().length < 3 || $('#name_school').val().length > 25)
        {
            nmsa = 0;
            $("#v_name_school").html('<div class="alert alert-danger">Isian harus terdiri dari 3 sampai 25 karakter.</div> ');
        }
        else if(nms)
        {
            nmsa = 1;
            $("#v_name_school").html('');
        }
    });

    $('#form_isian').change(function(){
        // console.log(nmsf+","+nmsa); 

        if(nmsf == 0 || nmsa == 0)
        {
            $('#submit_btn').attr('disabled','disabled');
        }
        else if(nmsf == 1 && nmsa == 1)
        {
            $('#submit_btn').removeAttr('disabled','disabled');
        }
    });

