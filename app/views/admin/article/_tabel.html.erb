<table class="table table-striped table-bordered tabelku">
	<thead>
		<tr>
			<th>No</th>
			<th>Judul</th>
			<th>Isi</th>
			<th>Penulis</th>
			<th>Dibuat Oleh</th>
			<th>Waktu Dibuat</th>
			<th>Terakhir Diperbaharui</th>
			<th colspan="3" style="text-align: center">Operasi</th>			
		</tr>
	</thead>
	<tbody>
		
		<% @articles.each_with_index do |key, hh| %>
		  <tr>
		  	<td><%= (@hhh.to_i + hh + 1) %></td>
		    <td><%= key.title %></td>
		    <td><%= key.the_text %></td>
		    <td><%= key.writer %></td>
		    <td><%= key.t_type.article_type  %></td>
		    <td><%= key.t_user.nme  %></td>
		    <td><%= key.created_at %></td>
		    <td><%= key.updated_at %></td>
		    <td class="lable-icon" title="Modifikasi"><%= link_to "i", edit_article_path(key.id) %></td>			
			<td class="lable-icon" title="Hapus"><%= link_to "t", delete_article_path(key.id), :confirm => 'Anda yakin akan menghapus data ini? Data tidak bisa dikembalikan.' %></td>
			<td class="lable-icon" title="Lihat"><%= link_to "e", article_path(key.id) %></td>
		  </tr>
		<% end %>
	</tbody>
	</table>
	<%= will_paginate @articles, :id => "ajax_paginate" %>